{% extends 'BackBeeWebBundle::layout.html.twig' %}
{% block head %}
    {{ parent() }}
    {{ this.partial('partials/head.twig')|raw }}
{% endblock %}

{% block body %}
    <!--<![endif]-->
    {{ this.bbtoolbar()|raw }}

    <div id="fb-root"></div>

    <div id="bb5-site-wrapper" class="{% block layout_css_class %}{% endblock %}">

        {{ this.partial('partials/header.twig')|raw }}

        <nav id="nav-primary-wrapper" class="nav navbar-wrapper collapse navbar-collapse">
            <div class="container">
                {{ this.navbar('header')|raw }}
            </div>
        </nav>

        {% block beforeMainContent %}
            {{ this.breadcrumb()|raw }}
        {% endblock %}

        <div class="main container" role="main" itemprop="mainContentOfPage">
            {% block content %}{% endblock %}
        </div>

        {{ this.partial('partials/footer.twig')|raw }}
    </div>
{% endblock %}